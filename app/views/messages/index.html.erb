<button id="disconnect" class='btn disconnect-btn'>Disconnect</button>

<div id='chat-stuff'>
  <h1>Chat</h1>
  <ul id="chat"></ul>
  <h4 id="chat-msg"><span id='title-msg'></span>you can check out anytime you like, but you can never back!</h4>

  <div id='form-for'>
    <input id='input-form'/>
    <button class='btn send-btn'>Send</button>
  </div>
</div>

<div id="draw">
  <h1>Draw</h1>
  <canvas id="myCanvas" width="700" height="500"></canvas>
  <div id="buttons">
    <button id="clear" class='btn clear-btn'>Clear</button>
    <button id="hide-controls" class="btn controls-btn">Hide Palette</button>
    <button id="show-controls" class="btn controls-btn">Show Palette!</button>
  </div>
  <div id='controls'>
    <div id='pen-color' class='inline'>
      <ul id='colors'>
        <li id='tomato'></li>
        <li id='#1abc9c' class='turquoise'></li>
        <li id='#34495e' class='wetasphalt'></li>
        <li id="#bdc3c7" class='silver'></li>
        <li id='#2980b9' class='belizehole'></li>
        <li id='orange'></li>
        <li id='#f1c40f' class='sunflower'></li>
        <li id="#8e44ad" class='westeria'></li>
      </ul>
    </div>
    <div id='pen-size' class='inline'>
      <div id='pen' class='inline'><span id='picker'>Picker</span><span id='size-preview' class='inline'></span></div>
      <input type='range' min='2' max='40' step='1' class='inline' id='size-slider'>
    </div>
  </div>
</div>

<ul id="sharedCanvas">
  <button id="send-img" class="btn sendimg-btn">Send to Me!</button>
  <h1>Skyers</h1>
  <li><canvas id="sharedCanvas1" width="350" height="250"></canvas></li>
  <li><canvas id="sharedCanvas2" width="350" height="250"></canvas></li>
</ul>



<div id="subscribe">
  <% if @channel_num %>
    <%= subscribe_to "/messages/#{@channel_num}" %>
    <%= subscribe_to "/chat/#{@channel_num}" %>
    <%= subscribe_to "/clear/1" %>
    <%= subscribe_to "/clear/2" %>
  <% end %>
</div>

